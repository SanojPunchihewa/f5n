<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mobilegenomics.f5n">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PipelineActivity"
            android:label="Select Steps" />

        <activity
            android:name=".activity.StepActivity"
            android:label="Configure tool GUI Mode" />

        <activity
            android:name=".activity.ConfirmationActivity"
            android:label="Pipeline Execution" />

        <activity
            android:name=".activity.DownloadActivity"
            android:label="Download and Extract" />

        <activity
            android:name=".activity.MinITActivity"
            android:label="Connect to F5N Server" />

        <activity
            android:name=".activity.TerminalActivity"
            android:label="Configure tool Terminal Mode" />

        <activity
            android:name=".activity.HelpActivity"
            android:label="Help" />

        <activity
            android:name=".activity.TutorialActivity"
            android:label="How To" />

        <activity
            android:name=".activity.DemoActivity"
            android:label="Demo Mode" />
    </application>

</manifest>