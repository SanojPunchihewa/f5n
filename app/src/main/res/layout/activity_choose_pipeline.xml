<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChoosePipelineActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btn_pipeline_type_methylation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimap2, Samtools and F5C" />

        <Button
            android:id="@+id/btn_pipeline_type_variant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimap2, Samtools and Nanopolish"
            android:layout_marginTop="100dp" />

        <Button
            android:id="@+id/btn_pipeline_type_artic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimap2, Samtools, Artic, Nanopolish and Bcftools"
            android:layout_marginTop="100dp" />

    </LinearLayout>

</RelativeLayout>